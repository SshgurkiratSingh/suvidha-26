generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Department {
  ELECTRICITY
  GAS
  WATER
  SANITATION
  MUNICIPAL
}

enum ServiceType {
  BILL_PAYMENT
  NEW_CONNECTION
  LOAD_CHANGE
  NAME_CHANGE
  CONNECTION_REMOVAL
  REFILL
  GRIEVANCE
  SCHEME_APPLICATION
  WATER_QUALITY_TEST
}

enum ApplicationStatus {
  SUBMITTED
  UNDER_PROCESS
  DEMAND_NOTE_ISSUED
  PAYMENT_PENDING
  APPROVED
  REJECTED
  DELIVERED
  COMPLETED
}

enum PaymentStatus {
  INITIATED
  SUCCESS
  FAILED
  REFUNDED
}

enum AuthType {
  OTP
}

enum AdminRole {
  SUPER
  SUPPORT
  ANALYST
}

enum ActorType {
  ADMIN
  CITIZEN
  SYSTEM
}

model Citizen {
  id           String   @id @default(uuid())
  fullName     String
  mobileNumber String   @unique
  email        String?  @unique
  createdAt    DateTime @default(now())

  sessions           Session[]
  serviceAccounts    ServiceAccount[]
  applications       Application[]
  payments           Payment[]
  grievances         Grievance[]
  waterQualityTests  WaterQualityTest[]
  citizenProfile     CitizenProfile?
  schemeApplications SchemeApplication[]
  chatConversations  ChatConversation[]
}

model Session {
  id        String   @id @default(uuid())
  citizenId String
  authType  AuthType
  expiresAt DateTime
  createdAt DateTime @default(now())

  citizen Citizen @relation(fields: [citizenId], references: [id])
}

model ServiceAccount {
  id         String     @id @default(uuid())
  citizenId  String
  department Department
  consumerId String
  address    String
  active     Boolean    @default(true)
  createdAt  DateTime   @default(now())

  citizen Citizen @relation(fields: [citizenId], references: [id])
  bills   Bill[]
}

model Bill {
  id               String   @id @default(uuid())
  serviceAccountId String
  amount           Float
  dueDate          DateTime
  isPaid           Boolean  @default(false)
  createdAt        DateTime @default(now())

  serviceAccount ServiceAccount @relation(fields: [serviceAccountId], references: [id])
  payments       Payment[]
}

model Payment {
  id        String        @id @default(uuid())
  citizenId String
  billId    String?
  amount    Float
  status    PaymentStatus
  receiptNo String?
  createdAt DateTime      @default(now())

  citizen Citizen @relation(fields: [citizenId], references: [id])
  bill    Bill?   @relation(fields: [billId], references: [id])
}

model Application {
  id          String            @id @default(uuid())
  citizenId   String
  department  Department
  serviceType ServiceType
  status      ApplicationStatus
  submittedAt DateTime          @default(now())
  schemeId    String?
  updatedAt   DateTime          @updatedAt
  data        Json? // Flexible field for custom application data

  citizen   Citizen       @relation(fields: [citizenId], references: [id])
  scheme    PublicScheme? @relation(fields: [schemeId], references: [id])
  documents Document[]    @relation("ApplicationDocuments")
}

model Grievance {
  id          String            @id @default(uuid())
  citizenId   String
  department  Department
  description String
  status      ApplicationStatus
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  data        Json? // Flexible field for grievance details

  citizen   Citizen    @relation(fields: [citizenId], references: [id])
  documents Document[] @relation("GrievanceDocuments")
}

model Document {
  id            String   @id @default(uuid())
  applicationId String?
  grievanceId   String?
  fileUrl       String
  localPath     String?
  extractedText String?  @db.Text
  uploadedAt    DateTime @default(now())

  application Application? @relation("ApplicationDocuments", fields: [applicationId], references: [id])
  grievance   Grievance?   @relation("GrievanceDocuments", fields: [grievanceId], references: [id])
}

model PublicService {
  id                String      @id @default(uuid())
  department        Department
  serviceType       ServiceType
  name              String
  description       String?
  fees              Float       @default(0)
  requiredDocuments String[]
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
}

model PublicScheme {
  id          String     @id @default(uuid())
  department  Department
  title       String
  description String
  eligibility String

  applications        Application[]
  eligibilityCriteria SchemeEligibilityCriteria[]
  requiredDocuments   SchemeRequiredDocument[]
  schemeApplications  SchemeApplication[]
}

model Advisory {
  id         String     @id @default(uuid())
  department Department
  message    String
  validTill  DateTime
}

model Policy {
  id            String     @id @default(uuid())
  department    Department
  title         String
  description   String
  category      String?
  effectiveFrom DateTime?
  documentUrl   String?
  createdAt     DateTime   @default(now())
}

model Tariff {
  id            String     @id @default(uuid())
  department    Department
  name          String
  description   String?
  category      String?
  rate          Float
  unit          String
  effectiveFrom DateTime?
  createdAt     DateTime   @default(now())
}

model WaterQualityTest {
  id            String            @id @default(uuid())
  citizenId     String
  sampleAddress String
  status        ApplicationStatus
  reportUrl     String?
  createdAt     DateTime          @default(now())

  citizen Citizen @relation(fields: [citizenId], references: [id])
}

model Admin {
  id           String    @id @default(uuid())
  email        String    @unique
  fullName     String
  passwordHash String
  role         AdminRole @default(SUPER)
  createdAt    DateTime  @default(now())

  sessions AdminSession[]
}

model AdminSession {
  id        String   @id @default(uuid())
  adminId   String
  expiresAt DateTime
  createdAt DateTime @default(now())

  admin Admin @relation(fields: [adminId], references: [id])
}

model AuditLog {
  id        String    @id @default(uuid())
  actorType ActorType
  actorId   String?
  action    String
  metadata  Json?
  createdAt DateTime  @default(now())
}

model ErrorReport {
  id        String   @id @default(uuid())
  path      String
  method    String
  message   String
  stack     String?
  createdAt DateTime @default(now())
}

// ==================== ENHANCED SCHEME MODELS ====================

enum QuestionType {
  YES_NO
  SINGLE_CHOICE
  MULTIPLE_CHOICE
  NUMBER
  TEXT
  DATE
  RANGE
}

enum EligibilityStatus {
  ELIGIBLE
  NOT_ELIGIBLE
  PARTIALLY_ELIGIBLE
  PENDING_REVIEW
}

enum SchemeApplicationStatus {
  DRAFT
  SUBMITTED
  UNDER_REVIEW
  DOCUMENTS_REQUIRED
  APPROVED
  REJECTED
  WITHDRAWN
}

model CitizenProfile {
  id               String    @id @default(uuid())
  citizenId        String    @unique
  dateOfBirth      DateTime?
  gender           String?
  maritalStatus    String?
  category         String? // General, OBC, SC, ST
  religion         String?
  occupation       String?
  education        String?
  monthlyIncome    Float?
  annualIncome     Float?
  aadhaarNumber    String?
  panNumber        String?
  rationCardType   String? // APL, BPL, AAY
  rationCardNumber String?

  // Address Information
  permanentAddress String?
  currentAddress   String?
  district         String?
  state            String?
  pincode          String?

  // Family Information
  familyMembers      Int?
  dependents         Int?
  handicappedMembers Int?

  // Property/Assets
  landownership  String? // Landless, <1 acre, 1-2 acres, >2 acres
  houseOwnership String? // Own, Rented, Government Quarter

  // Other Information
  bankAccountNumber String?
  bankName          String?
  ifscCode          String?

  // Saved Eligibility Answers for Reuse
  savedEligibilityAnswers Json? // { "questionText": "answer", ... } - Stores answers from eligibility surveys
  consentToSaveAnswers    Boolean @default(false) // User consent to save answers for future schemes

  additionalData Json? // Flexible field for custom data
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  citizen Citizen @relation(fields: [citizenId], references: [id], onDelete: Cascade)
}

model SchemeEligibilityCriteria {
  id              String       @id @default(uuid())
  schemeId        String
  questionText    String
  questionType    QuestionType
  options         Json? // For single/multiple choice: ["Option 1", "Option 2", ...]
  validationRules Json? // { "min": 18, "max": 60 } or { "required": true, "matches": "^[0-9]{12}$" }
  weightage       Int          @default(0) // For scoring-based eligibility
  order           Int          @default(0) // Display order
  isRequired      Boolean      @default(true)
  helpText        String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  scheme PublicScheme @relation(fields: [schemeId], references: [id], onDelete: Cascade)
}

model SchemeRequiredDocument {
  id              String   @id @default(uuid())
  schemeId        String
  documentName    String
  description     String?
  isMandatory     Boolean  @default(true)
  acceptedFormats Json // ["pdf", "jpg", "png"]
  maxSizeKB       Int      @default(2048)
  order           Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  scheme PublicScheme @relation(fields: [schemeId], references: [id], onDelete: Cascade)
}

model SchemeApplication {
  id                   String                  @id @default(uuid())
  citizenId            String
  schemeId             String
  applicationNumber    String                  @unique
  eligibilityAnswers   Json? // Store the answers from eligibility survey
  eligibilityStatus    EligibilityStatus?
  eligibilityScore     Float?
  eligibilityCheckedAt DateTime? // When eligibility was checked
  formData             Json? // Store form data (personal info, address, bank details, etc.)
  status               SchemeApplicationStatus @default(DRAFT)
  remarks              String?
  rejectionReason      String?
  submittedAt          DateTime?
  reviewedAt           DateTime?
  reviewedBy           String? // Admin ID
  createdAt            DateTime                @default(now())
  updatedAt            DateTime                @updatedAt

  citizen   Citizen                     @relation(fields: [citizenId], references: [id])
  scheme    PublicScheme                @relation(fields: [schemeId], references: [id])
  documents SchemeApplicationDocument[]
}

model SchemeApplicationDocument {
  id            String   @id @default(uuid())
  applicationId String
  documentName  String
  filePath      String
  fileSize      Int
  mimeType      String
  uploadedAt    DateTime @default(now())

  application SchemeApplication @relation(fields: [applicationId], references: [id], onDelete: Cascade)
}

// ========================================
// CHATBOT & AI ASSISTANT MODELS
// ========================================

model ChatConversation {
  id            String   @id @default(uuid())
  citizenId     String?
  sessionId     String   @unique
  isAnonymous   Boolean  @default(false)
  context       Json? // Stores conversation context, user preferences, etc.
  lastMessageAt DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  citizen  Citizen?      @relation(fields: [citizenId], references: [id], onDelete: Cascade)
  messages ChatMessage[]

  @@index([citizenId])
  @@index([sessionId])
}

model ChatMessage {
  id             String   @id @default(uuid())
  conversationId String
  role           String // 'user', 'assistant', 'system', 'function'
  content        String   @db.Text
  metadata       Json? // Store function calls, voice data, etc.
  tokens         Int?
  voiceUrl       String? // URL to voice recording if user used voice input
  createdAt      DateTime @default(now())

  conversation ChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([createdAt])
}

model KnowledgeBase {
  id         String   @id @default(uuid())
  category   String // 'scheme', 'policy', 'faq', 'tariff', 'procedure', etc.
  title      String
  content    String   @db.Text
  metadata   Json? // Store additional context like department, eligibility, etc.
  embedding  String? // Store embedding as string (will be converted to vector)
  sourceUrl  String?
  department String?
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([category])
  @@index([department])
  @@index([isActive])
}

model ChatFunctionCall {
  id             String   @id @default(uuid())
  conversationId String
  functionName   String
  arguments      Json
  result         Json?
  status         String // 'pending', 'success', 'error'
  error          String?
  executedAt     DateTime @default(now())

  @@index([conversationId])
  @@index([functionName])
}
